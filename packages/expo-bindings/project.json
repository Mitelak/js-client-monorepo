{
  "name": "expo-bindings",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/expo-bindings/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/expo-bindings",
        "main": "packages/expo-bindings/src/index.ts",
        "tsConfig": "packages/expo-bindings/tsconfig.lib.json",
        "assets": ["packages/expo-bindings/*.md"]
      }
    },
    "publish": {
      "command": "ts-node ./tools/scripts/publish.ts expo-bindings",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/expo-bindings/**/*.ts",
          "packages/expo-bindings/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/expo-bindings/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
