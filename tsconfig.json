{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "incremental": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["**/__tests__/"],
  "references": [
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/sha256"
    },
    {
      "path": "./packages/react"
    },
    {
      "path": "./packages/remote-eval"
    },
    {
      "path": "./packages/local-eval"
    },
    {
      "path": "./packages/extensions"
    }
  ]
}
