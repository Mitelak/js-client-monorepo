{
  "name": "dloomb-client-monorepo",
  "version": "1.0.0-beta.3",
  "description": "A monorepo in TypeScript",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build --verbose && webpack --config ./config/webpack.config.js && npm run size-check",
    "prepare": "husky install config/husky && npm run build",
    "size-check": "./config/size-check.js",
    "test": "jest --config=./config/jest.config.js",
    "test:playwright": "playwright test --config=./config/playwright.config.ts",
    "clean-build": "npm run clean && npm run build",
    "clean": "npm run clean-build-folders && npm run clean-tsbuild-info",
    "clean-build-folders": "find . -type d \\( -name 'build' -o -name 'dist' \\) -not -path './node_modules/*' -exec rm -rf {} +",
    "clean-tsbuild-info": "find . -type f -name 'tsconfig.tsbuildinfo' -not -path './node_modules/*' -exec rm -f {} +",
    "lint": "eslint .",
    "version-sync": "./config/version-sync.js"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@playwright/test": "^1.38.1",
    "dloomb-client-test-helpers": "file:./packages/test-helpers",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react-native": "^12.3.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@tsconfig/react-native": "^3.0.2",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.11.9",
    "@types/react-test-renderer": "^18.0.2",
    "@types/react": "^18.2.23",
    "@types/webpack": "^5.28.2",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "esbuild": "^0.19.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint": "^8.48.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.0.3",
    "react-native": "^0.72.5",
    "terser": "^5.19.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "uglify-js": "^3.17.4",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack": "^5.88.2",
    "husky": "^8.0.0"
  },
  "dependencies": {
    "dloomb-client-core": "file:./packages/core",
    "dloomb-client-extensions": "file:./packages/extensions",
    "dloomb-client-on-device-eval": "file:./packages/on-device-eval",
    "dloomb-client-react": "file:./packages/react",
    "dloomb-client-react-native": "file:./packages/react-native",
    "dloomb-client-remote-server-eval": "file:./packages/remote-server-eval"
  },
  "eslintConfig": {
    "extends": "./config/.eslintrc.js",
    "root": true
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}