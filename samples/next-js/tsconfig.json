{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next",
      },
    ],
    "types": [
      "jest",
      "node"
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../next-js/.next/types/**/*.ts",
    "../../dist/next-js/.next/types/**/*.ts",
    "next-env.d.ts",
    "../../dist/samples/next-js/.next/types/**/*.ts",
    "../../next-js-sample/.next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
  ],
}